@page "/"
@using Spellslinger.Components
@using Spellslinger.Services
@inject IGame Game
@inject IMapGenerator MapGenerator

<div @onkeydown="KeyDown" tabindex="0">

	<PageTitle>Home</PageTitle>

	<div style="display: flex; flex-direction: row">
		@if (Game.InputMode == Models.InputMode.CharacterSelection)
		{
			<CharacterSelectionView />
		}
		else if (Game.InputMode == Models.InputMode.Spellcrafting)
		{
			<SpellcraftingView />
		}
		else
		{
			<MapView Model="@Game.CurrentMap" />
		}

		<div>
			<div>
				@if (Game.Player is null)
				{
					@if (Game.InputMode != Models.InputMode.CharacterSelection)
					{
						<span>GAME OVER</span>
					}
				}
				else
				{
					<StatsView @ref="statsView" />
				}
			</div>
			<div class="log">
				@for (var i = Game.Log.Count - 30; i < Game.Log.Count; i++)
				{
					if (i >= 0)
					{
						<p class="log-entry">@Game.Log[i]</p>
					}
				}
			</div>
		</div>
	</div>

</div>